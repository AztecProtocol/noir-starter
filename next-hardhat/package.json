{
  "name": "noir-starter",
  "version": "1.0.0",
  "description": "A template repository to get started with writing zero knowledge programs with Noir.",
  "scripts": {
    "dev": "next",
    "build": "hardhat compile && npm run deploy && next build",
    "start": "next start",
    "deploy": "hardhat compile && hardhat run --network ${NETWORK} scripts/deploy.ts",
    "test": "hardhat compile && vitest",
    "verify_gas": "hardhat run scripts/genContract.ts && hardhat run scripts/verificationGas.ts"
  },
  "dependencies": {
    "@aztec/bb.js": "0.3.4",
    "@noir-lang/avcm.js": "https://github.com/noir-lang/acvm-simulator-wasm.git",
    "@noir-lang/noir_wasm": "https://github.com/signorecello/noir_wasm",
    "@noir-lang/noir-source-resolver": "https://github.com/signorecello/noir-source-resolver.git",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "next": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-loader-spinner": "^5.3.4",
    "react-toastify": "^9.1.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.5",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "typescript": "^4.9.3",
    "vitest": "^0.31.4"
  }
}
